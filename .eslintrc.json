{
    "plugins": ["@typescript-eslint"],
    "extends": [
        "next/core-web-vitals",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "prefer-const": "error",
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/no-explicit-any": "error",
        "@next/next/no-img-element": "off",
        "no-console": "error"
    },
    "settings": {
        "reactVersion": "detect"
    }
}
